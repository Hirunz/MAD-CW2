<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterMovie">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/display_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:background="@drawable/main_menu_bg1"
                android:elevation="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="72dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/register_icon"
                    android:contentDescription="@string/icon" />

                <TextView
                    android:id="@+id/register_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/register_heading1"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/register_heading2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center_horizontal"
                    android:text="@string/register_heading2"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/register_movie_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/title"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/viewMovie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:fontFamily="@font/noto_sans"
                    android:hint="@string/enter_a_movie_name"
                    android:inputType="textCapSentences"

                    android:textSize="18sp"
                    android:autofillHints="" />

                <TextView
                    android:id="@+id/register_movie_year_heading2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/year"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/view_movie_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:fontFamily="@font/noto_sans"
                    android:hint="@string/enter_movie_release_year"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/register_movie_director_heading2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/director"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/view_movie_director"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:fontFamily="@font/noto_sans"
                    android:hint="@string/enter_movie_director"
                    android:inputType="textCapSentences"

                    android:textSize="18sp"
                    android:autofillHints="" />

                <TextView
                    android:id="@+id/register_movie_ratingText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/rating"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/register_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:fontFamily="@font/noto_sans"
                    android:hint="@string/enter_movie_rating_0_10"
                    android:inputType="number"
                    android:maxLength="2"

                    android:textSize="18sp"
                    android:autofillHints="" />

                <TextView
                    android:id="@+id/register_movie_review_heading2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/review"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/register_movie_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:fontFamily="@font/noto_sans"
                    android:hint="@string/enter_a_review"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="8sp"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/register_movie_actors_heading2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/actors"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/view_movie_actors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:fontFamily="@font/noto_sans"
                    android:hint="@string/enter_actors_seperated_by_commas"
                    android:inputType="textCapSentences|textLongMessage|textMultiLine"

                    android:textSize="18sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/light_blue"
                app:cardCornerRadius="40dp">

                <Button
                    android:id="@+id/register_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/light_blue"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center_vertical"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:onClick="onSave"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>